{
  "name": "better-pickleball-sessions",
  "version": "1.0.0",
  "description": "Better Pickleball Sessions - Professional session management",
  "homepage": "https://betterpickleballsessions.com",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:npx": "npx -y vite@latest",
    "check": "node check-config.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "node run-all-tests.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitest/ui": "^3.2.4",
    "gh-pages": "^6.1.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
